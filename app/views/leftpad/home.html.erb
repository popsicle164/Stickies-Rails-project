<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<style>
    body {
        margin: 0;
        font-family:sans-serif;
    }
    
    .banner {
        height: 30vh;
        background-color: #FF0000;
        text-shadow: 5px 5px 5px grey;
        color: white;
        padding: auto;
        display: flex;

        justify-content: center;
        align-items: center;
    }

    form {
        display: flex;
        flex-direction: column;
        justify-content: center;
        width:100%;
    }

    input[type="text"] {
        position: relative;
        width: 100%;
        height: 4vh;
        display: block;
        margin: 0 auto;
        background-color: rgba(255, 255, 255, 0.383);
    }

    h2 {
        padding: auto;
        font-size: 2vh;
    }

    .sticky_area {
        display: flex;
        flex-flow: row wrap;
        justify-content: flex-start;
        align-items: space-between;
        padding: auto;
        text-align: center;
        text-justify: center;
        position: relative;
    }

    .sticky {
        margin: 1vh;
        color:white;
        text-shadow: 5px 5px 5px grey;
        animation: bgColor2 5s infinite ease-in-out;
        box-shadow: 10px 10px 5px grey;
        height: 15vh;
        width: 15vh;
        overflow-wrap: break-word;
        overflow: hidden;
    }

    .show-image {
        position: relative;
        float:left;
        margin:5px;
    }

    .show-image:hover img{
        opacity:0.5;
    }
    .show-image:hover button {
        display: block;
        background-color: transparent;
    }
    .show-image button {
        width: 50px;
        height: 50px;
        position:absolute;
        display:none;
        border: none;
    }
    .show-image button.update {
        bottom:0;
        left:0;
        background: center/50% url('https://cdn.discordapp.com/attachments/429121521529651210/908443931002421258/pencil.png') no-repeat;
        cursor: pointer;
    }
    .show-image button.delete {
        bottom:0;
        right:0;
        background: center/50% url('https://cdn.discordapp.com/attachments/429121521529651210/908444385358794803/trashcan.png') no-repeat;
        cursor: pointer;
    }

    .secret {
        display: none;
        position: absolute;
        height: 45vh;
        width: 45vh;
        backdrop-filter: blur(20px) brightness(50%) opacity(20%);
        margin: auto 0;
    }

</style>

<script>

    function edit (id,body,color) {
        document.getElementById("secret").style.display = "block";
        console.log(document.getElementById("secret"));
        document.getElementById("secret").style.background = color;
        document.getElementById("edit_textbox").value = body;
        document.getElementById("edit_colorbox").value = color;
        document.getElementById("word").value = id;
    }

</script>


<body>
    <div class="banner">
        <div>
            <h1>Enter your Bubb-It® text here!</h1>
            <form action="/create" method="post">   
                <label for="body">Text</label><input type="text" id="textbox" name="body" maxlength="60">
                <label for="color">Color</label><input type="color" id="colorbox" name="color"><br>
                <button name="data" type="submit">SEND IT</button>
                <input type="hidden" name="authenticity_token" id="authenticity_token" value="<%=form_authenticity_token%>">
            </form> 
        </div>
    </div>
    <div class="sticky_area" id="stickies">
        <%@stickies.each do |sticky|%>
            <div id="<%=sticky.id%>" class="sticky show-image" style="background-color: <%=sticky.color%>">
                <h2><%=sticky.body%></h2>
                <button class="update" onclick="edit('<%=sticky.id%>','<%=sticky.body%>','<%=sticky.color%>')"></button>
                <form action="/delete" method="delete">
                    <button class="delete" type="submit"></button>
                    <input type="hidden" name="id" value="<%=sticky.id%>">
                </form>
            </div>
            <%puts sticky.color%>
        <%end%>
        <div class="banner secret" id="secret">
            <h1>Enter your Bubb-It® text here!</h1>
                <form action="/edit" method="edit">   
                    <label for="body">Text</label><input type="text" id="edit_textbox" name="body" maxlength="60">
                    <label for="color">Color</label><input type="color" id="edit_colorbox" name="color"><br>
                    <button name="data" type="submit">UPDATE IT</button>
                    <input id="word" type="hidden" name="id">
                </form>
        </div>
    </div>

</body>
</html>
